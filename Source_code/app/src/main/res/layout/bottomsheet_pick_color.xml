<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:text="Edit Sticker"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:textSize="27sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgBackBottomSheet"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="#000"
        android:text="Color:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <ImageView
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imgPickColorBS"
            android:src="@drawable/color"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclPickColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtFont"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="#000"
        android:text="Font:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/rclFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_marginBottom="15sp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnEdtText"
            android:text="Edit text"
            android:background="@drawable/radius_button_10"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>


</LinearLayout>